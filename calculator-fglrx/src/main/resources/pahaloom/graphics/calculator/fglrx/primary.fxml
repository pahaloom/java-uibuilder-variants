<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pahaloom.graphics.calculator.fglrx.PrimaryController">
   <children>
      <Label text="Primary View" />
      <TextField id="fieldA" fx:id="valA" alignment="CENTER_RIGHT" promptText="0" styleClass="numeric" stylesheets="@application.css" />
      <TextField id="fieldB" fx:id="valB" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" promptText="0" styleClass="numeric" stylesheets="@application.css" />
      <ChoiceBox id="chooseOp" fx:id="op" prefHeight="40.0" prefWidth="110.0" styleClass="numeric" stylesheets="@application.css" />
      <TextField id="fieldC" fx:id="valC" alignment="CENTER_RIGHT" disable="true" editable="false" styleClass="numeric" stylesheets="@application.css" />
      <Button fx:id="primaryButton" text="Switch to Secondary View" onAction="#switchToSecondary"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
